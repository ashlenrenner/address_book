        <form action="/users/<%= user.username %>" method="POST">

            <p>
            <label>First Name</label>
            <input type="text" id="name" name="name" value="<%= user.name %>" />
            </p>

            <p>
            <label>Last Name</label>
            <input type="text" id="username" name="username" value="<%= user.username %>" />
            </p>

            <p>
            <label>Job Title</label>
            <input type="text" id="title" name="title" value="<%= user.title %>" />
            </p>

            <p>
            <label>Street Address</label>
            <input type="text" id="street" name="street" value="<%= user.street %>" />
            </p>

            <p>
            <label>City</label>
            <input type="text" id="city" name="city" value="<%= user.city %>" />
            </p>

            <p>
            <label>State</label>
            <input type="text" id="state" name="state" value="<%= user.state %>" />
            </p>

            <p>
            <label>Zip</label>
            <input type="text" id="zip" name="zip" value="<%= user.zip %>" />
            </p>

            <p>
            <label>Notes</label>
            <input type="text" id="notes" name="notes" value="<%= user.notes %>" />
            </p>

            <button class="btn btn-primary">Update</button>
              <a class="btn btn-danger" href="/users/delete/<%= user.username %>">Delete</a>

        </form>
